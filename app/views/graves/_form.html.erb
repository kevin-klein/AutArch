<%= form_with(model: grave) do |form| %>
  <% if grave.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grave.errors.count, "error") %> prohibited this grave from being saved:</h2>

      <ul>
        <% grave.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :figure_id, style: "display: block" %>
    <%= form.text_field :figure_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<div class='row'>
  <div class='col-md-8'>
    <a href='#' data-grave-id='<%= grave.id %>' class="btn btn-secondary" id='new-figure-button' data-reflex='click->Figures#create'>
      New Figure
    </a>
    <%= render('figures/figure_view', { figures: grave.figures, image: grave.page.image }) %>
  </div>
</div>
