<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Area</th>
      <th>Perimeter</th>
      <th>Width</th>
      <th>Length</th><!-- longer -->
      <th>Depth</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @graves.each do |grave| %>
      <tr>
        <td><%= grave.id %></td>
        <td><%= number_with_unit grave.area_with_unit %></td>
        <td><%= number_with_unit grave.perimeter_with_unit %></td>
        <td><%= number_with_unit grave.width_with_unit %></td>
        <td><%= number_with_unit grave.height_with_unit %></td>
        <td><%= number_with_unit grave.grave_cross_section&.height_with_unit %></td>
        <td><%= link_to('Edit', edit_grave_path(grave)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
