<p style="color: green"><%= notice %></p>


<div class="row">
  <div class="col-md-12">

    <div id="box-editor" data-arrow-angle='<%= @grave&.arrow&.angle %>' data-image="data:image/jpeg;base64,<%= Base64.encode64 @grave.figure.page.image.data %>" data-figures="<%= @grave.figures.to_json(methods: [:width, :height]) %>">
    </div>
  </div>

  <div class="col-md-6">
    <table class="table">
      <thead>
      </thead>

      <tbody>
        <tr>
          <td>Arrow angle</td>
          <td><%= @grave&.arrow&.angle %></td>
        </tr>

        <tr>
          <td>Arc Length</td>
          <td><%= @grave.arc_length %></td>
        </tr>
        <tr>
          <td>Area</td>
          <td><%= @grave.area %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
