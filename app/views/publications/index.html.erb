<p style="color: green"><%= notice %></p>

<h1>Publications</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td>
          <%= publication.title %>
        </td>
        <td>
          <%= publication.author %>
        </td>
        <td>
          <%= publication.year %>
        </td>
        <td>
          <%= link_to "Pages", publication_pages_path(publication) %>
          <div class="vr mx-1"></div>
          <%= link_to 'Stats', stats_publication_path(publication) %>
          <div class="vr mx-1"></div>
          <%= link_to 'Edit', edit_publication_path(publication) %>
          <div class="vr mx-1"></div>
          <%= link_to 'Site', assign_site_publication_path(publication) %>
          <div class="vr mx-1"></div>
          <%= link_to 'Summary', summary_publication_path(publication) %>
          <div class="vr mx-1"></div>
          <%= link_to 'Delete', publication_path(publication), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New publication", new_publication_path %>
