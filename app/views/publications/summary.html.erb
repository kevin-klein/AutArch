<%= pie_chart @data %>

<div>
  Pages:
  <%= @publication.pages.count %>
</div>
ArtefactMisc
<table class='table'>
  <thead>
    <tr>
      <th>Type</th>
      <th>Count</th>
    </tr>
  </thead>

  <tbody>
    <% @data.sort_by { _1[1] }.reverse.each do |type, count| %>
      <tr>
        <td><%=
          if type == 'Kurgan'
            'Burial Mound'
          elsif type == 'Oxcal'
            'OxCal Diagram'
          elsif type == 'Arrow'
            'Orientation Arrow'
          else
            type
          end
        %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
