
<%= link_to 'Edit Page', publication_page_path(@ceramic.page.publication, @ceramic.page) %>

<%= simple_form_for(ceramic_path(@ceramic), html: { class: 'form-inline' }) do |f| %>
  <%= f.input :actual_height_mm %>
  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>


<%= render(
  FigureViewComponent.new(figures: [@ceramic], image: @ceramic.page.image, contours: true)
) %>
