<%= render("stepper") %>

<div class='row'>
  <div class='col-md-6'>
    <%= link_to("Update Keypoints", skeleton_keypoints_grave_update_grave_index_path(skeleton_id: @grave.skeleton_figures.first)) %>
    <%= render(
      FigureViewComponent.new(figures: @grave.figures, image: @grave.page.image)
    ) %>
  </div>
  <div class='col-md-6'>
    <%= simple_form_for(@grave, url: wizard_path) do |f| %>
      <%= f.simple_fields_for :skeleton_figures do |ff| %>
        <h4><%= "Skeleton #{ff.object.id.to_s}" %></h4>
        <%# raise %>
        <%= ff.input :deposition_type,
                 collection: SkeletonFigure.deposition_types.map { |k, v| [k.tr('_', ' '), k] },
                 selected: ff.object.deposition_type %>
      <% end %>

      <%= f.submit("Next", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>
