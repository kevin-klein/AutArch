<%= render('stepper') %>

<div class='row'>
  <div class='col-md-6'>
    <%= render(FigureViewComponent.new(figures: @grave.figures, image: @grave.page.image)) %>
  </div>

  <div class='col-md-6'>
    <%= simple_form_for(@grave, url: wizard_path) do |f| %>
      <%= f.input :identifier %>
      <%= f.submit('Next', class: 'btn btn-primary') %>
    <% end %>
  </div>
</div>

<%= link_to('Delete', figure_path(@grave), method: :delete) %>
