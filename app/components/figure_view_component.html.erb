<svg viewBox='<%= "0 0 #{@image.width} #{@image.height}" %>'>
  <image width='<%= @image.width %>' height='<%= @image.height %>' href='<%= @image.href %>' />

  <% @figures.each do |figure| %>
    <% if figure.is_a?(Spine) %>

    <% elsif figure.manual_bounding_box %>
      <rect
          fill='none'
          stroke="red"
          strokeWidth="2"
          x='<%= figure.bounding_box_center_x - (figure.bounding_box_width / 2) %>'
          y='<%= figure.bounding_box_center_y - (figure.bounding_box_height / 2) %>'
          width='<%= figure.bounding_box_width %>'
          height='<%= figure.bounding_box_height %>'
          transform='rotate(<%= figure.bounding_box_angle %> <%= figure.bounding_box_center_x %> <%= figure.bounding_box_center_y %>)'
        />
        <text
          x='<%= figure.x1 %>'
          y='<%= figure.y1 %>'
          style='font-size: 36px;'
          >
          <%= figure.type %> <%= figure.id %>
        </text>
    <% else %>
      <% if @contours%>
        <polyline
          points='<%= contour_path(figure) %>'
          fill='#3F51B5'
          stroke='#3F51B5'
          strokeWidth='5'
          opacity='.5'
        />
        <text
          x='<%= figure.x1 %>'
          y='<%= figure.y1 %>'
          style='font-size: 36px;'
          >
          <%= figure.type %> <%= figure.id %>
        </text>
      <% else %>
        <rect
          fill='none'
          stroke="red"
          strokeWidth="2"
          x='<%= figure.x1 %>'
          y='<%= figure.y1 %>'
          width='<%= figure.x2 - figure.x1 %>'
          height='<%= figure.y2 - figure.y1 %>'
        />
        <text
          x='<%= figure.x1 %>'
          y='<%= figure.y1 %>'
          style='font-size: 36px;'
          >
          <%= figure.type %> <%= figure.id %>
        </text>
      <% end %>
    <% end %>
  <% end %>
</svg>
